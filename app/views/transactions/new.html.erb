<div class = "container d-flex py-5 justify-content-center">
  <% if @cards.empty? %>
  <h1>You have no cards to exchange</h1>
  <%# <%#link_to "Register card", new_offer_transaction_path(@offer), class: "btn btn-outline-secondary" %> %>
  <% else %>
    <%= simple_form_for [@offer, @transaction] do |f| %>
      <%= f.association :buyer_card, collection: @cards, label_method: :player_name %>
      <%= f.submit class: "btn btn-dark" %>
    <% end %>
  <% end %>
</div>
